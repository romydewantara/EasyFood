<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_dialog"
    tools:context=".fragments.bottomsheet.MealBottomSheetFragment">

    <ImageView
        android:id="@+id/image_bottom_sheet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@color/accent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_layout_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_bottom_sheet"
        app:layout_constraintTop_toTopOf="@id/image_bottom_sheet">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_area_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_location"
            android:fontFamily="@font/urbanist_medium"
            android:text="Palestine"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_category_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_categories"
            android:fontFamily="@font/urbanist_medium"
            android:text="Beef"
            android:textColor="@color/black" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_meal_name_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="Meal Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/linear_layout_bottom_sheet"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_bottom_sheet" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_read_more_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="Read Moreâ€¦"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/text_meal_name_bottom_sheet"
        app:layout_constraintTop_toBottomOf="@id/text_meal_name_bottom_sheet" />

</androidx.constraintlayout.widget.ConstraintLayout>